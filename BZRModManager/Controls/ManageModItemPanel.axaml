<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="using:FluentAvalonia.UI.Controls"
        xmlns:uip="using:FluentAvalonia.UI.Controls.Primitives"
        xmlns:controls="using:BZRModManager.Controls"
        xmlns:models="clr-namespace:BZRModManager.Models">
  <Design.PreviewWith>
    <controls:ManageModItemPanel ModData=""/>
  </Design.PreviewWith>

  <Style Selector="controls|ManageModItemPanel">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
        <Border Margin="5"
                BorderThickness="1"
                BorderBrush="Gray">
          <DockPanel>
            <Image Source="{Binding Image,
                            TargetNullValue={x:Static models:Dummy.FallbackImage},
                            FallbackValue={x:Static models:Dummy.FallbackImage}}"
                   Height="256"
                   Width="256"
                   RenderOptions.BitmapInterpolationMode="HighQuality"
                   DockPanel.Dock="Top"/>
            <DockPanel DockPanel.Dock="Bottom"
                       Height="100">
              <TextBlock Text="{Binding Title}"
                         Padding="10"
                         TextAlignment="Center" />
            </DockPanel>
          </DockPanel>
        </Border>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
